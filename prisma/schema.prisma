generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Wish {
  id       String @id @default(uuid())
  sender   String
  receiver String
  songId   String
  message  String

  occasion Occasion @default(CHRISTMAS)

  styleVariant String

  createdAt DateTime @default(now())
}

enum Occasion {
  CHRISTMAS
  NEW_YEAR
}
